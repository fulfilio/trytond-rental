<?xml version="1.0"?>
<data>
    <xpath expr="/form/notebook/page[@id='general']/field[@name='cost_price_method']" position="after">
        <label name="rentable"/>
        <field name="rentable"/>
    </xpath>
    <xpath expr="/form/notebook" position="inside">
        <page string="Rental" id="rental">
            <group id="rates" string="Rates" colspan="2" col="2">
                <label name="rent_hourly" string="Hourly"/>
                <field name="rent_hourly"/>
                <label name="rent_daily" string="Daily"/>
                <field name="rent_daily"/>
                <label name="rent_weekly" string="Weekly"/>
                <field name="rent_weekly"/>
                <label name="rent_monthly" string="Monthly"/>
                <field name="rent_monthly"/>
                <label name="rent_yearly" string="Yearly"/>
                <field name="rent_yearly"/>
            </group>
        </page>
    </xpath>
</data>
